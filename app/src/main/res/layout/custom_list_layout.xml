<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/districtName"
     android:textColor="@android:color/darker_gray"
     android:layout_toEndOf="@+id/stateName"
     android:layout_below="@+id/firstName"
     android:text="District 10" />

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/stateName"
     android:textColor="@android:color/darker_gray"
     android:layout_toEndOf="@+id/partyName"
     android:layout_below="@+id/firstName"
     android:text="illinios" />

 <ImageView
     android:layout_width="40dp"
     android:layout_height="40dp"
     android:id="@+id/click"
     android:src="@drawable/click"
     android:layout_marginEnd="15dp"
     android:layout_alignTop="@+id/firstName"
     android:layout_alignParentEnd="true" />

 <ImageView
     android:id="@+id/imageList"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_marginTop="18dp"
     android:layout_alignParentTop="true"
     android:layout_alignParentStart="true"
     android:layout_marginStart="13dp" />

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/partyName"
     android:textColor="@android:color/darker_gray"
     android:text="(d)"
     android:layout_alignBaseline="@+id/stateName"
     android:layout_alignBottom="@+id/stateName"
     android:layout_toEndOf="@+id/imageList"
     android:layout_marginStart="24dp" />

 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
     android:textColor="@android:color/black"
     android:text=" First_Name"
     android:layout_alignTop="@+id/imageList"
     android:layout_alignStart="@+id/partyName" />

</RelativeLayout>